<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar_blue_button" parent="toolbar_button_svgbluetemplate">
        <item name="android:background">@drawable/button_bluegradient</item>
        <item name="iconMaxHeight">20dip</item>
    </style>
    <style name="toolbar_blue_statebutton" parent="toolbar_button_svgbluetemplate">
        <item name="android:background">@drawable/statebutton_bluegradient</item>
        <item name="iconMaxHeight">20dip</item>
    </style>
    <style name="toolbar_button_svgbluetemplate">
        <item name="extendedImage">@style/SvgCompoundDrawable</item>
        <item name="paintsSetup">@array/InvertedEmboss</item>
        <item name="android:scaleType">fitXY</item>
    	<item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginRight">@dimen/playscreen_toolbar_spacing</item>
    </style>
   
    <style name="playscreen_toolbar">
		<item name="extendedBackground">@style/playscreen_toolbar_bg</item>
	</style>
    
    <dimen name="playscreen_toolbar_spacing">1dip</dimen>
    
	<style name="playscreen_toolbar_bg" parent="RectDrawable">
        <item name="cornerTopRight">4dip</item>
        <item name="cornerTopLeft">4dip</item>
        <item name="padding">4dip</item>
        <item name="paddingRight">3dip</item>
        <item name="strokePaint">@style/playscreen_toolbar_strokePaint</item>
        <item name="fillPaint">@style/playscreen_toolbar_fillPaint</item>
	</style>
	
	<style name="playscreen_toolbar_strokePaint" parent="PaintAntialias">
	    <item name="paintStyle">STROKE</item>
	    <item name="color">@color/blue_buttons_container_border</item>
	    <item name="strokeWidth">1dip</item>
	</style>
	
	<style name="playscreen_toolbar_fillPaint" parent="PaintAntialias">
	    <item name="paintStyle">FILL</item>
	    <item name="color">@color/blue_buttons_container_background</item>
	</style>
		
</resources>