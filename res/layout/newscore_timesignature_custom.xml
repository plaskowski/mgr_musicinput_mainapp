<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ramka_5dip"
    android:clickable="true"
>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="center_vertical"
    >
	    <Button
	        android:id="@+id/upper_increment_button"
	        style="@style/NEWSCORE_timesignature_button"
	        android:text="+"
	    />
	
	    <Button
	        android:id="@+id/lower_increment_button"
	        style="@style/NEWSCORE_timesignature_button"
	        android:text="+"
	    />
	</LinearLayout>
    
  	<pl.edu.mimuw.students.pl249278.android.musicinput.ui.view.LinedSheetElementView
	    android:id="@+id/NEWSCORE_tempo"
		xmlns:custom="http://schemas.android.com/apk/res/pl.edu.mimuw.students.pl249278.android.musicinput"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    custom:paint="@style/NEWSCORE_thumbsPaint"
	    custom:minLinesWidth="48dip"
	    custom:linesHorizontalPadding="4dip"
	    android:layout_gravity="center_vertical"
	/>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="center_vertical"
    >
	  	<Button
	        android:id="@+id/upper_decrement_button"
	        style="@style/NEWSCORE_timesignature_button"
	        android:text="-"
	    />
	
	    <Button
	        android:id="@+id/lower_decrement_button"
	        style="@style/NEWSCORE_timesignature_button"
	        android:text="-"
	    />
	</LinearLayout>    
</TableRow>