<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/inactive_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/inactive_stroke" />
			<padding
				android:top="4dip"
				android:bottom="4dip"
				android:left="4dip"
				android:right="4dip"
			/>					
        </shape>
    </item>    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#B9EEFF"
                android:centerColor="#FFFFFF"
                android:endColor="#B9EEFF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#458499" />
			<padding
				android:top="4dip"
				android:bottom="4dip"
				android:left="4dip"
				android:right="4dip"
			/>					
        </shape>
    </item>
	<item>
        <shape>
            <gradient
                android:startColor="#FF73DCFF"
                android:endColor="#458499"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#458499" />
        </shape>
	</item>
</selector>
