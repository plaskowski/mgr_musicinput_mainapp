<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="iaFrame" parent="OutlineDrawable">
		<item name="paintsSetup">@style/iaBgPaint</item>
    </style>
    
	<style name="insertButton" parent="SvgCompoundDrawable">
		<item name="svgResource">@array/svg_icon_add</item>
		<item name="paintsSetup">@array/InvertedEmboss</item>    
	</style>
    
   	<style name="iaBgPaint" parent="PaintAntialias">
	    <!-- PaintSetup -->
    	<item name="drawRadius">3dip</item>
    	<!-- Paint -->
       	<item name="paintStyle">STROKE</item>
       	<item name="strokeWidth">3dip</item>
    	<item name="color">@color/colorPrimaryLight</item>
    	<item name="shadowLayer_radius">1.5dip</item>
    	<item name="shadowLayer_dx">1.5dip</item>
    	<item name="shadowLayer_dy">1.5dip</item>
    	<item name="shadowLayer_color">#000000</item>
 	   	<item name="pathEffect">@style/dashed</item>
   	</style>
    
   	<style name="dashed">
	    <item name="effectType">@id/PathEffectType_Dash</item>
	    <item name="intervals">@array/dashed_intervals</item>
	</style>
	
   	<array name="dashed_intervals">
   	    <item>12dip</item>
   	    <item>6dip</item>
   	    <item>18dip</item>
   	    <item>6dip</item>
   	</array>
</resources>