<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/pl.edu.mimuw.students.pl249278.android.musicinput"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<include 
	    layout="@layout/edit_merge_sheet_title_popup"
    />
    
	<pl.edu.mimuw.students.pl249278.android.musicinput.ui.view.ImageButton_ExtendedImage 
	    android:id="@+id/EDIT_menu_button"
		android:layout_width="50dip"
		android:layout_height="50dip"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		style="@style/EDIT_menuButton"
	/>
	    <pl.edu.mimuw.students.pl249278.android.musicinput.ui.view.HorizontalNoteValueSpinner
			android:layout_height="50dip" 
			android:layout_toRightOf="@id/EDIT_menu_button"
			android:layout_alignParentBottom="true"
			android:id="@+id/EDIT_note_value_scroll" 
			android:layout_width="fill_parent" 
			android:scrollbars="none"
			custom:itemPaint="@style/spinnerNoSelection"
			custom:selectedItemPaint="@style/spinnerSelection"
			custom:spacing="0.40"
			android:layout_centerHorizontal="true"
			android:background="#000000"
		>
			<LinearLayout
				android:layout_height="50dip"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/pasek_tile"
				android:paddingTop="2dip"
				android:paddingBottom="2dip"
			/>
	    </pl.edu.mimuw.students.pl249278.android.musicinput.ui.view.HorizontalNoteValueSpinner>
		<ImageView 
			android:src="@drawable/cien"
			android:background="@drawable/simpleborder_gray_1dp"
			android:scaleType="fitXY"
			android:layout_alignLeft="@id/EDIT_note_value_scroll"
			android:layout_alignTop="@id/EDIT_note_value_scroll"
			android:layout_alignRight="@id/EDIT_note_value_scroll"
			android:layout_alignBottom="@id/EDIT_note_value_scroll"
			android:layout_height="0dip"
			android:layout_width="0dip"
		/><!-- shadow over spinner -->    
	
</RelativeLayout>