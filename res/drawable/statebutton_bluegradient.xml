<?xml version="1.0" encoding="utf-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android"
>
	<item>
	<selector>
	    <item android:state_enabled="false">
	        <shape>
            	<solid android:color="@color/inactive_bg" />
	            <stroke
	                android:width="1dp"
	                android:color="@color/inactive_stroke" />
	            <corners
	                android:radius="3dp" />
				<padding
					android:top="3dp"
					android:bottom="3dp"
					android:left="3dp"
					android:right="3dp"
				/>					
	        </shape>
	    </item>    
	    <item android:state_pressed="true" >
	        <shape>
	            <gradient
	                android:startColor="#B9EEFF"
	                android:centerColor="#FFFFFF"
	                android:endColor="#B9EEFF"
	                android:angle="270" />
	            <stroke
	                android:width="1dp"
	                android:color="#458499" />
	            <corners
	                android:radius="3dp" />
	            <padding
	                android:left="3dip"
	                android:top="3dip"
	                android:right="3dip"
	                android:bottom="3dip" />
	        </shape>
	    </item>
		<item>
	        <shape>
	            <gradient
	                android:startColor="#FF73DCFF"
	                android:endColor="#458499"
	                android:angle="270" />
	            <stroke
	                android:width="1dp"
	                android:color="#458499" />
	            <corners
	                android:radius="3dp" />
	            <padding
	                android:left="3dip"
	                android:top="3dip"
	                android:right="3dip"
	                android:bottom="3dip" />
	        </shape>
		</item>
    </selector>
    </item>
	<item><layer-list>
		<!-- using 2dip and -2dip is a little trick to make 2 dip space between content and indicator -->
		<item>
			<shape>
				<solid android:color="@null" />
	            <padding android:bottom="2dip" />
	        </shape>
		</item>
		<!-- 
		 -->
		<item
			android:bottom="-2dip"
		>
		<selector>
	     <item
	      	android:state_selected="true" 
    		android:drawable="@drawable/btn_toggle_on"
        />
	     <item
    		android:drawable="@drawable/btn_toggle_off"
        />
		</selector>
		</item>
	</layer-list></item>
</layer-list>