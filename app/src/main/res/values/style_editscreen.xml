<?xml version="1.0" encoding="utf-8"?>
<resources>	
	<dimen name="optimalLinespaceThickness">60dp</dimen>
	<dimen name="maxLinespaceThickness">100dp</dimen>    
	<dimen name="inputAreaWidth">88dip</dimen>
	<string name="minDistToIA">1.5s</string>
	<string name="fakePauseEffectRadius">0.1s</string>
	<string name="actionSubjectVisiblePaddingLeft">0.5s</string>
	<item name="repositioningDuration" type="integer">300</item>
		
    <array name="EmbossGray">
    	<item>@style/EmbossGray_edge</item>
    	<item>@style/EmbossGray_fill</item>
    </array>
    
    <style name="EmbossGray_fill" parent="PaintAntialias">
    	<item name="color">#40FFFFFF</item>
    	<item name="drawRadius">3px</item>
    </style>
    <style name="EmbossGray_edge" parent="PaintAntialias">
    	<item name="color">#40000000</item>
    	<item name="offsetX">1px</item>
    	<item name="offsetY">1px</item>
    	<item name="drawRadius">1px</item>
    	<item name="paintStyle">STROKE</item>
    	<item name="strokeWidth">2px</item>
    </style>
    
    <style name="EDIT_menuButton">
	    <item name="android:background">@drawable/button_darkgraygradient</item>
	    <item name="android:scaleType">fitXY</item>
   	    <item name="extendedImage">@style/SvgCompoundDrawable</item>
	    <item name="svgResource">@array/svg_button_menu</item>
	    <item name="paintsSetup">@array/EmbossGray</item>
	    <item name="iconMaxHeight">32dip</item>
    </style>
</resources>